<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (username){ %>
        <form name = logout class = "form-inline" action="/logout" method="POST" style="display:flex;justify-content:center;align-items:center">
          <div class="navbar-brand">You are logged in as: <%= username %> &nbsp;</div>
          <button type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
      <% } else { %>
      <form name = loginOut class = "form-inline" action="/login" method="POST" style="display:flex;justify-content:center;align-items:center">
        <input class="form-control" type="text" name="username" placeholder="username" style="width: 150px; margin-right: 10px;">
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
      <% } %>
    </div>
  </nav>
</div>
</header>